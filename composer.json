{
    "name": "sushantaryal/nepali-phone-validation",
    "description": "A Laravel validation rule for Nepalese mobile phone numbers.",
    "keywords": [
        "laravel",
        "validation",
        "nepalese phone"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Sushant Aryal",
            "email": "sushant.aryal90@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/validation": "^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.2",
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^9.0|^10.4|^11.5"
    },
    "autoload": {
        "psr-4": {
            "Sushant\\NepaliPhoneValidation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sushant\\NepaliPhoneValidation\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sushant\\NepaliPhoneValidation\\NepaliPhoneValidationServiceProvider"
            ]
        }
    }
}
